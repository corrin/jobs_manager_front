{
  "name": "frontend-jobs-manager",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm run update-schema && vite",
    "build": "npm run update-schema && run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "prepare": "simple-git-hooks",
    "gen:api": "node ./scripts/gen-api.js",
    "update-schema": "(curl -f -o schema.yml http://localhost:8000/api/schema/ 2>/dev/null || echo 'Backend not available, using existing schema.yml') && npm run gen:api"
  },
  "dependencies": {
    "@internationalized/date": "^3.8.2",
    "@tailwindcss/vite": "^4.1.8",
    "@tanstack/vue-table": "^8.21.3",
    "@types/event-source-polyfill": "^1.0.5",
    "@types/quill": "^2.0.14",
    "@types/sortablejs": "^1.15.8",
    "@types/uuid": "^10.0.0",
    "@unovis/vue": "^1.5.2",
    "@vee-validate/zod": "^4.15.1",
    "@vueuse/core": "^13.6.0",
    "@zodios/core": "^10.9.6",
    "ag-grid-community": "^33.3.2",
    "ag-grid-vue3": "^33.3.2",
    "axios": "^1.9.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "event-source-polyfill": "^1.0.31",
    "js-cookie": "^3.0.5",
    "lucide-vue-next": "^0.513.0",
    "openapi-zod-client": "^1.18.3",
    "pdf-vue3": "^1.0.12",
    "pinia": "^3.0.1",
    "qs": "^6.14.0",
    "quill": "^2.0.3",
    "reka-ui": "^2.4.1",
    "sortablejs": "^1.15.6",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^4.1.8",
    "tw-animate-css": "^1.3.4",
    "uuid": "^11.1.0",
    "vaul-vue": "^0.4.1",
    "vee-validate": "^4.15.1",
    "vue": "^3.5.13",
    "vue-advanced-chat": "^2.1.0",
    "vue-router": "^4.5.0",
    "vue-sonner": "^2.0.1",
    "zod": "^3.25.55"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.1",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^22.15.30",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.22.0",
    "eslint-plugin-vue": "~10.0.0",
    "jiti": "^2.4.2",
    "lint-staged": "^16.1.2",
    "npm-run-all2": "^7.0.2",
    "prettier": "3.5.3",
    "simple-git-hooks": "^2.13.0",
    "typescript": "~5.8.0",
    "vite": "^6.2.4",
    "vite-plugin-vue-devtools": "^7.7.2",
    "vue-tsc": "^2.2.8"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yml,css}": [
      "prettier --write"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "npm run lint; npm run type-check"
  }
}
